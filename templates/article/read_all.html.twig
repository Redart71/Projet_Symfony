<div class="d-flex flex-wrap justify-content-evenly" style="padding: 40px; background-color: #c44b90; padding-bottom: 60px;">
{% for article in articles %}
        <div class="card col-6" style="width: 20rem; border: none;">
            <img src="{{ asset('uploads/brochures/' ~ article.picture) }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{article.title}}</h5>
                <p class="card-text">{{article.content}}</p>
                <div class="d-flex f-row justify-content-evenly">
                    <a href="/article/read/{{article.id}}" class="btn btn-primary">Lire plus</a>
                    <a href="/article/edit/{{article.id}}" class="btn btn-warning">Modifier</a>
                    <a href="/article/delete/{{article.id}}" class="btn btn-danger">Supprimer</a>
                </div>
            </div>
        </div>
{% endfor %}
