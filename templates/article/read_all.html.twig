<a href="/article/create"><button type="submit" class="btn btn-primary">Créer</button></a>
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<a href="/article/create"><button type="submit" class="btn btn-primary">Connecté</button></a>
